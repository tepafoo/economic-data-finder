body {
	width: 100% !important;
	height: 95% !important;
}

.displayNone {
	display: none;
}

#worldBankGraphContainer {
	width: 100%;
}

#economic_data_finder_graph_title {
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
	line-height: 20px;
	font-weight: bold;
}

.displayTable {
	display: table;
	float: left;
	height: 100%;
	width: 100%;
}

.displayTableRow {
	display: table-row;
}

.displayTableCell {
	display: table-cell;
	vertical-align: middle;
	text-align: center;
}